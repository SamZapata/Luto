<div class="container">
  <h1>Respuestas</h1>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Consecutive </th>
        <th>| Code Question </th>
        <th>| date </th>
        <th>| value</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @answers.each do |answer| %>
        <tr>
          <td><%= answer.form_id %></td>
          <td><%= answer.question_id %></td>
          <td><%= answer.created_at %></td>
          <td><%= answer.value %></td>
          <td><%= link_to 'Show', answer %></td>
          <td><%= link_to 'Edit', edit_answer_path(answer) %></td>
          <td><%= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <p><%= link_to("Generar Archivo CSV", answers_path(format: :csv), class: "btn btn-success",) %></p>


</div>

